{
  "name": "store-reviews-parser",
  "version": "1.0.0",
  "description": "Веб-приложение для парсинга отзывов из App Store и Google Play",
  "main": "packages/api/dist/index.js",
  "workspaces": [
    "packages/api",
    "client"
  ],
  "scripts": {
    "dev": "concurrently \"npm run dev -w store-reviews-parser-server\" \"npm run dev -w client\"",
    "build": "npm run build -w store-reviews-parser-server && npm run build -w client",
    "build:api": "npm run build -w store-reviews-parser-server",
    "start": "npm start -w store-reviews-parser-server",
    "install:all": "npm install",
    "smoke": "node scripts/smoke.mjs"
  },
  "keywords": [
    "reviews",
    "parser",
    "app-store",
    "google-play"
  ],
  "author": "Nikita Samutin",
  "license": "ISC",
  "dependencies": {
    "axios": "^1.7.2",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "csv-writer": "^1.6.0",
    "express": "^4.19.2",
    "google-play-scraper": "^10.0.0",
    "helmet": "^7.1.0"
  },
  "optionalDependencies": {
    "sqlite3": "^5.1.7"
  },
  "devDependencies": {
    "@types/compression": "^1.7.5",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/lodash.debounce": "^4.0.9",
    "@types/node": "^20.9.0",
    "@types/react": "^18.2.66",
    "@types/react-dom": "^18.2.22",
    "@types/react-select": "^5.0.0",
    "@vitejs/plugin-react": "^4.2.1",
    "autoprefixer": "^10.4.19",
    "concurrently": "^8.2.2",
    "daisyui": "^4.12.2",
    "eslint": "^8.57.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.6",
    "nodemon": "^3.0.1",
    "postcss": "^8.4.38",
    "tailwindcss": "^3.4.4",
    "ts-node": "^10.9.1",
    "typescript": "^5.2.2",
    "vite": "^5.2.0"
  }
}
